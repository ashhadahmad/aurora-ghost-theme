{
  "name": "ashhad-custom",
  "description": "custom theme for ashhad.in",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "author": {
    "name": "Ashhad Ahmad",
    "email": "ashhad@ashhad.in",
    "url": "https://ashhad.in"
  },
  "keywords": [
    "aurora-theme",
    "ashhad-custom",
    "Ashhad Ahmad",
    "ghost",
    "ghost-theme"
  ],
  "scripts": {
    "dev": "gulp",
    "start": "postcss ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify --watch",
    "tailwind": "tailwindcss  -i ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify"
  },
  "screenshots": {
    "desktop": "assets/hello-world-thumb.png"
  },
  "config": {
    "custom": {
      "linkedin_url": {
        "type": "text",
        "default": "None"
      },
      "github_url": {
        "type": "text",
        "default": "None"
      },
      "youtube_url": {
        "type": "text",
        "default": "None"
      },
      "instagram_url": {
        "type": "text",
        "default": "None"
      },
      "twitter_url": {
        "type": "text",
        "default": "None"
      },
      "footer_text": {
        "type": "text"
      },
      "primary_header": {
        "type": "text",
        "default": "Welcome to my site",
        "group": "homepage"
      },
      "secondary_header": {
        "type": "text",
        "default": "Subscribe below to receive my latest posts directly in your inbox",
        "group": "homepage"
      }
    },
    "image_sizes": {
      "xs": {
        "width": 150
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 720
      },
      "l": {
        "width": 960
      },
      "xl": {
        "width": 1200
      },
      "xxl": {
        "width": 2000
      }
    },
    "posts_per_page": 10,
    "card_assets": true
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "gscan": "^4.40.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.3",
    "gulp-livereload": "^4.0.2",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-uglify": "^3.0.2"
  }
}
